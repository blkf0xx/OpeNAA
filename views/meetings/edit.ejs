<%- include('../partials/header') %>

<% if (user?._id) { %>
<form id="update-meeting" action="/meetings/<%= meeting._id %>?_method=PUT" method="POST">

        <label>Meeting Name:</label>
        <input type="text" name="mtgName" value="<%= meeting.mtgName %>">

        <label>Organization:</label>
        <input type="text" name="organization" value="<%= meeting.organization %>">

        <label>Weekday:</label>
        <select name="weekday" value="<%= meeting.weekday %>">
            <!-- <option>-- Select one --</option> -->
            <option value="Monday">Monday</option>
            <option value="Tuesday">Tuesday</option>
            <option value="Wednesday">Wednesday</option>
            <option value="Thursday">Thursday</option>
            <option value="Friday">Friday</option>
            <option value="Saturday">Saturday</option>
            <option value="Sunday">Sunday</option>
        </select>
        <br>
        <label>Time:</label>
        <input type="time" name="time" value="<%= meeting.time %>">
        <br>
        <label>Meeting Length:</label>
        <input type="Number" name="length" value="<%= meeting.length %>">

        <label for="format">Format:</label>
        <select id="format" name="format" value="<%= meeting.format %>">
            <!-- <option>-- Select one --</option> -->
            <option value="In Person">In Person</option>
            <option value="Online Only">Online Only</option>
            <option value="Hybrid">Hybrid</option>
        </select>

        <div id="dependent-inputs">
            <label>Meeting URL:</label>
            <input type="text" name="link" value="<%= meeting.link %>">

            <label>Meeting ID:</label>
            <input type="text" name="mtgId" value="<%= meeting.mtgId %>">

            <label>Meeting Passcode:</label>
            <input type="text" name="mtgPasscode" value="<%= meeting.passcode %>">
        </div>
        <div id="location">
            <label>Meeting Location:</label>
            <input type="text" name="address" value="<%= meeting.address %>">
        </div>
        <br>
        <input type="submit" name="submit">
    </form>
<% } %>

<%- include('../partials/footer') %>
