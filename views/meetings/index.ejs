<%- include('../partials/header') %>

<h2>meetings/index</h2>

<div class="main-container">
    <div class="table-container">
        <div class="table-row heading">
            <div class="row-item">Time</div>
            <div class="row-item">Weekday</div>
            <div class="row-item">Meeting</div>
            <div class="row-item">Location</div>
        </div> <!-- row 1 end -->
        <% meetings.forEach(m => { %> 
        <div class="table-row">
            <div class="row-item"><%= m.time %></div>
            <div class="row-item"><%= m.weekday %></div>
            <div class="row-item"><a href="/meetings/<%= m._id %>"><%= m.mtgName %></a></div>
            <div class="row-item"><a href="https://www.google.com/maps?q=<%= m.address %>" target="_blank"><%= m.address %></a></div>
        </div> <!-- row 2 end -->
        <% }) %>
    </div> <!-- table container end -->
</div> <!--main continer end -->

<%- include('../partials/footer') %>